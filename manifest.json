{
    "manifest_version": 2,
    "name": "SpeedThru",
    "version": "1.0",
    "description": "Speed Through YouTube ads",

    "icons": {
        "48": "icons/speedthru_48x48.png",
        "96": "icons/speedthru_96x96.png"
    },
    "permissions": [
        "activeTab"
    ],

    "content_scripts":[
        {
            "matches":["<all_urls>"],
            "js":["main.js"]
        }
    ],

    "browser_action": {
        "default_title": "Speedthru",
        "default_icon": "icons/speedthru_48x48.png"
    }

}